            <!--        android:layout_marginTop="2dp"-->
            <!--        />-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23dp">

                <Button
                    android:textAllCaps="false"
                    android:id="@+id/btnStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Start" />

                <Button
                    android:id="@+id/btnEnd"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/btnStart"
                    android:text="End" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btnSave"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SAVE" />

                <Button
                    android:id="@+id/btnReload"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/btnSave"
                    android:text="@string/RESET" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp">

                <Button
                    android:id="@+id/btnHostRead"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/host_protect" />

                <Button
                    android:id="@+id/btnHostWrite"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/btnHostRead"
                    android:text="@string/host_change" />

            </RelativeLayout>
            <!--  <TextView
                  android:id="@+id/hostConfig"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginTop="23dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:singleLine="false"
                  android:ellipsize="marquee"
                  android:focusable="true"
                  android:focusableInTouchMode="true"
                  /> -->
            <!-- android:background="@null" -->


        </LinearLayout>

    </ScrollView>

</LinearLayout>